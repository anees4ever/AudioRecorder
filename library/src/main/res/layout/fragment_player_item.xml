<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/list_item_white">

        <ImageButton
            android:id="@+id/ibtnPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/aar_ic_play"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <SeekBar
            android:id="@+id/sbPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ibtnPlay"
            android:layout_toStartOf="@+id/ibtnTrim" />

        <TextView
            android:id="@+id/tvPlayerDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sbPlayer"
            android:layout_below="@+id/sbPlayer"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:text="00:00"/>

        <ImageButton
            android:id="@+id/ibtnTrim"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ibtnMoreOptions"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/aar_ic_trim"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <ImageButton
            android:id="@+id/ibtnMoreOptions"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_more_options"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>

</FrameLayout>
